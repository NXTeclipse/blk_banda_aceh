<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent" android:orientation="vertical"
    android:padding="@dimen/far" android:gravity="center"
    android:background="@color/colorFree" android:layout_width="match_parent">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp" android:src="@drawable/logo" android:layout_marginBottom="@dimen/normal" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/etLoginUsername" android:layout_height="wrap_content" android:background="@drawable/background_light"
        android:hint="Username" android:minHeight="48dp" />

    <EditText
        android:id="@+id/etLoginPassword"
        android:layout_width="match_parent" android:layout_marginTop="@dimen/normal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/high" android:background="@drawable/background_light"
        android:hint="Password"
        android:inputType="textPassword" android:minHeight="48dp" />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:background="@drawable/background_dark"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/colorFree"/>
</LinearLayout>